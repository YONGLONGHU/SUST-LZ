
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}
.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}
.canvas-container {
  width: 100%;
  height: 400px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20px;
}
.legend {
  display: flex;
  justify-content: space-around;
  width: 100%;
}
.legend-item {
  display: flex;
  align-items: center;
  font-size: 14px;
}
.legend-text {
  margin-left: 5px;
}
