
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}
.profile {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
}
.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 10px;
}
.nickname {
  font-size: 20px;
  font-weight: bold;
}
.info-list {
  width: 100%;
}
.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px 0;
  border-bottom: 1px solid #eee;
}
.info-title {
  font-size: 16px;
  color: #333;
}
.info-value {
  font-size: 16px;
  color: #666;
}
.arrow {
  width: 20px;
  height: 20px;
}
.operation-list {
  width: 100%;
  margin-top: 20px;
}
.operation-item {
  padding: 15px 0;
  background-color: #f5f5f5;
  text-align: center;
  font-size: 16px;
  color: #333;
  border-bottom: 1px solid #eee; /* 添加分隔线 */
}
