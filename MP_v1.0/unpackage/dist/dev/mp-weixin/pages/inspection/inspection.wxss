
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff;
}
.header {
  margin-top: 20px;
  text-align: center;
}
.title {
  font-size: 24px;
  font-weight: bold;
}
.subtitle {
  font-size: 18px;
  color: #888888;
  margin-top: 5px;
}
.button-list {
  margin-top: 20px;
  width: 90%;
}
.button-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #e6e6fa;
  padding: 10px;
  border-radius: 10px;
  margin-bottom: 10px;
}
.button-text {
  font-size: 18px; /* 调整字体大小 */
  font-weight: bold; /* 加粗字体 */
  color: #00008b; /* 深蓝色 */
}
.icon {
  width: 40px;
  height: 40px;
}
