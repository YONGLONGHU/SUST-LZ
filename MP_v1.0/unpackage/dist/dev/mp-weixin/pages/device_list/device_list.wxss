
.container {
		display: flex;
		flex-direction: column;
		align-items: center;
		background: linear-gradient(135deg, #1e1e2f, #292942);
		height: 100vh;
}
.header {
		margin-top: 20px;
		text-align: center;
}
.title {
		font-size: 24px;
		font-weight: bold;
		color: lightgoldenrodyellow;
}
.subtitle {
		font-size: 18px;
		color: lightgoldenrodyellow;
		margin-top: 5px;
}
.button-list {
		margin-top: 20px;
		width: 90%;
}
.button-item {
		display: flex;
		justify-content: space-between;
		align-items: center;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
		background: rgba(255, 255, 255, 0.1);
		padding: 10px;
		border-radius: 20px;
		margin-bottom: 15px;
}
.button-text {
		font-size: 18px;
		/* 调整字体大小 */
		font-weight: bold;
		/* 加粗字体 */
		color: #fff;
}
.icon {
		width: 40px;
		height: 40px;
}
