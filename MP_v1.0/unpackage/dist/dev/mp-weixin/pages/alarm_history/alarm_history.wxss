
.container {
  padding: 20px;
  background: linear-gradient(135deg, #1e1e2f, #292942);
  color: #fff;
  min-height: 100vh;
  font-family: Arial, sans-serif;
}
.input-group {
  margin-bottom: 15px; /* 控件间距缩小 */
  display: flex;
  flex-direction: column;
}
.label {
  font-size: 16px;
  margin-bottom: 5px;
  color: #a5a5c0;
}
.input,
.picker {
  height: 40px;
  padding: 0 10px;
  background-color: #2e2e3f;
  border: 1px solid #444;
  border-radius: 5px;
  color: #fff;
}
.picker-text {
  line-height: 40px;
}
.checkbox-group {
  display: flex;
  flex-wrap: wrap;
  margin-top: 5px;
}
.checkbox {
  margin-right: 10px;
  color: #fff;
}
.selected-items {
  margin-top: 10px;
  color: #a5a5c0;
  font-size: 14px;
}
.submit-btn {
  width: 100%;
  height: 45px;
  background-color: #007aff;
  color: white;
  text-align: center;
  line-height: 45px;
  border-radius: 5px;
  font-size: 16px;
  font-weight: bold;
}
.submit-btn:active {
  background-color: #005bb5;
}
